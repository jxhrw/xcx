/* pages/curing/curing.wxss */
page {
    min-height: 100%;
    background: #FAFAFA;
}

.curing {
    /* min-height: 100%; */
    width: 100%;
    background: #FAFAFA;
}

.tabBox {
    width: 100%;
    height: 108rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9000;
    box-sizing: border-box;
    padding: 0 6%;
}

.tabBox text {
    display: block;
    width: 100rpx;
    height: 108rpx;
    line-height: 108rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    text-align: center;
}

.tabBox text.on {
    color: #C88E64;
    position: relative;
}

.tabBox text.on::after {
    content: "";
    display: block;
    width: 56rpx;
    height: 6rpx;
    background: linear-gradient(180deg, rgba(200, 142, 100, 1) 0%, rgba(200, 142, 100, 1) 100%);
    border-radius: 3rpx;
    position: absolute;
    bottom: 12rpx;
    left: 22rpx;
}

.scrollBox {
    width: 100%;
    /* min-height: 100%; */
    padding: 128rpx 0 0 0;
    box-sizing: border-box;
}

.scrollArea {
    height: 100%;
    display: block;
}

.bottomLine {
    height: 20rpx;
}

.order_this {
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 12rpx 0px rgba(0, 0, 0, 0.02);
    border-radius: 14rpx;
    padding: 30rpx 30rpx 20rpx 30rpx;
    width: 710rpx;
    margin: auto;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.order_num {
    line-height: 24rpx;
    font-size: 24rpx;
    color: rgba(51, 51, 51, 1);
    display: flex;
    justify-content: space-between;
}

.o_status {
    font-weight: 500;
    color: rgba(234, 60, 60, 1);
}

.goods_info {
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}

.good_img {
    width: 150rpx;
    height: 150rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 4rpx;
    border: 1rpx solid rgba(230, 230, 230, 1);
}

.good_int {
    width: 480rpx;
    font-size: 24rpx;
    color: #333;
}

.good_int text {
    display: block;
}

.good_name {
    margin-top: 5rpx;
    line-height: 30rpx;
    height: 60rpx;
    overflow: hidden;
}

.good_price {
    margin-top: 10rpx;
    color: #000;
}

.good_num {
    margin-top: 20rpx;
    color: #999;
}

.goods_total {
    margin-top: 35rpx;
    font-size: 24rpx;
    color: rgba(0, 0, 0, 1);
    text-align: right;
}

.btnBox {
    text-align: right;
    margin-top: 40rpx;
}

.order_cz {
    margin-left: 20rpx;
    width: auto !important;
    height: 52rpx;
    line-height: 52rpx !important;
    font-size: 24rpx!important;
    color: #C88E64 !important;
    border-color: #C88E64 !important;
    border-radius: 26rpx;
    padding: 0 20rpx !important;
}
.order_cz:first-child {
    color: #333 !important;
    border-color: #999 !important;
}

.order_cz:last-child {
    color: #C88E64 !important;
    border-color: #C88E64 !important;
}
.noTips{
    font-size: 24rpx;
    text-align: center;
    color: #999;
    margin-top: 30rpx;
}



/* 弹窗 */
.modalDlg {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 9000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.dlgContent {
    width: 80%;
    height: 720rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 14rpx;
    bottom: 0;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.log_name {
    padding: 30rpx 0;
    border-bottom: 1px solid #F5F6F6;
    font-size: 28rpx;
}

.log_list {
    height: 500rpx;
    font-size: 28rpx;
}

.l_log {
    border-bottom: 1px solid #F5F6F6;
    line-height: 36rpx;
    padding: 15rpx 20rpx;
}

.another {
    height: 70rpx;
    line-height: 70rpx !important;
    width: 100% !important;
    border-radius: 50rpx !important;
    margin: 0;
    margin-top: 30rpx;
}