/* pages/goods/goods.wxss */
swiper {
    height: 750rpx;
}
.banner {
    width: 100%;
    height: 750rpx;
}

.priceBox {
    font-size: 16rpx;
    color: #C88E64;
    text-align: center;
    margin-top: 30rpx;
}

.price {
    font-size: 34rpx;
    font-weight: bold;
}

.titleBox {
    font-size: 28rpx;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
    line-height: 30rpx;
    text-align: center;
    margin-top: 30rpx;
    padding-bottom: 50rpx;
}

.division {
    height: 21rpx;
    background: #FAFAFA;
}

.goodsDesc {
    font-size: 28rpx;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
    line-height: 30rpx;
    text-align: center;
    padding: 60rpx 20rpx 120rpx 20rpx;
}
.det_title{
  height: 59rpx;
}
.goodsImg {
    width: 100%;
    display: block;
}

.footerBox {
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
}

.gradient {
    height: 31rpx;
    background: linear-gradient(180deg, rgba(238, 238, 238, 0) 0%, rgba(181, 181, 181, 0.96) 100%);
    opacity: 0.057800000000000004;
}

.footer {
    height: 100rpx;
    background: rgba(255, 255, 255, 1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.footer .left {
    width: 200rpx;
    text-align: center;
    font-size: 20rpx;
    color: rgba(51, 51, 51, 1);

    background: none!important;
}

.footer .left::after {
    border: none;
}

.footer .left text {
    display: block;
    padding-top: 40rpx;
    background: url('https://youwatch.oss-cn-beijing.aliyuncs.com/app/wechat/icon_zixun.png') no-repeat center top/35rpx;

    padding-top: 25rpx;
}

.footer .right {
    flex: 1;
    text-align: center;
}

.order_cz {
    display: block !important;
    width: 473rpx !important;
    height: 62rpx;
    line-height: 62rpx !important;
    font-size: 28rpx !important;
    color: #fff !important;
    background: linear-gradient(159deg, rgba(230, 193, 157, 1) 0%, rgba(200, 142, 100, 1) 100%);
    border: none !important;
    border-radius: 36rpx;
}


/* 弹窗 */
.modalDlg {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 9000;
}

.dlgContent {
    width: 100%;
    height: 1100rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 14rpx 14rpx 0px 0px;
    position: absolute;
    bottom: 0;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.sku_info {
    padding: 40rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    border-bottom: 1px solid #F5F6F6;
}

.info_left {
    width: 220rpx;
    height: 220rpx;
    background: rgba(245, 246, 246, 1);
    border-radius: 8rpx;
}

.info_right {
    width: 440rpx;
}

.dlg_price {
    text-align: left;
    margin: 0;
    margin-bottom: 30rpx;
}

.chosen {
    font-size: 28rpx;
    font-weight: bold;
    color: rgba(153, 153, 153, 1);
    line-height: 30rpx;
    margin-bottom: 10rpx;
}

.sku_list {
    height: 680rpx;
}

.list_one {
    padding-top: 20rpx;
    border-bottom: 1px solid #F5F6F6;
}

.list_box {
    padding-bottom: 30rpx;
    width: 105%;
}

.btn_service {
    font-size: 26rpx !important;
    color: #333;
    background: #F5F6F6 !important;
    border: none !important;
    margin-top: 30rpx;
    margin-right: 30rpx;
}

.btn_service.on {
    background: #E6C19D !important;
    color: #fff;
}

.numBox {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 23rpx 0;
}

.numTxt {
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
    line-height: 28rpx;
}

.numBtn {
    width: 210rpx;
    height: 58rpx;
    border-radius: 29rpx;
    border: 1px solid rgba(216, 216, 216, 1);
    display: flex;
    justify-content: space-between;
}

.btn1 {
    height: 58rpx;
    line-height: 58rpx !important;
    text-align: center;
    border: none !important;
    display: block;
    width: 80px;
    padding: 0 !important;
}

.btn1::after {
    /* border: none!important; */
}

.inpt {
    text-align: center;
    width: 100px;
    height: 58rpx;
    line-height: 58rpx;
    border-left: 1px solid rgba(216, 216, 216, 1);
    border-right: 1px solid rgba(216, 216, 216, 1);
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
}

.another {
    height: 70rpx;
    line-height: 70rpx !important;
    width: 654rpx !important;
    margin-top: 30rpx;
}