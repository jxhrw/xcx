/* pages/order_detail/order_detail.wxss */
page {
    min-height: 100%;
    background: #FAFAFA;
    padding-bottom: 140rpx;
    box-sizing: border-box;
}

.order_detail {
    /* height: 100%; */
    width: 100%;
}

.status {
    padding: 0 30rpx;
    height: 156rpx;
    background: url('https://youwatch.oss-cn-beijing.aliyuncs.com/app/wechat/bg_order.png') no-repeat center/100% 100%;
    display: flex;
    /* flex-wrap: wrap; */
    align-items: center;
    color: #fff;
}

.dadnjad {
    height: auto;
}

.s_txt {
    width: 100%;
    display: block;
    font-size: 34rpx;
    font-weight: bold;
    line-height: 34rpx;
}

.s_desc {
    width: 100%;
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 28rpx;
    margin-top: 20rpx;
}

.sgAs {
    width: 100%;
    background: #fff;
    margin-top: 20rpx;
    padding: 30rpx 30rpx 35rpx 30rpx;
    position: relative;
    box-sizing: border-box;
}

.sgAs:after {
    content: "";
    position: absolute;
    height: 5rpx;
    width: 100%;
    bottom: 0;
    left: 0;
    background: linear-gradient(169deg, rgba(230, 193, 157, 1) 0%, rgba(200, 142, 100, 1) 100%);
}

.address_name_mobile {
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    color: #333;
}

.address_name {
    font-weight: bold;
}

.address_location {
    font-size: 26rpx;
    color: #999;
    /* min-height: 70rpx; */
    line-height: 35rpx;
    margin-top: 15rpx;
    word-wrap: break-word;
}

.info {
    margin-top: 20rpx;
    background: #fff;
    padding: 0 30rpx;
}

.goods_info {
    display: flex;
    justify-content: space-between;
    padding: 42rpx 0 30rpx 0;
    border-bottom: 1rpx solid #E6E6E6;
}

.good_img {
    width: 150rpx;
    height: 150rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 4rpx;
    border: 1rpx solid rgba(230, 230, 230, 1);
}

.good_int {
    width: 520rpx;
    font-size: 24rpx;
    color: #333;
}

.good_int text {
    display: block;
}

.good_name {
    margin-top: 5rpx;
    line-height: 30rpx;
    height: 60rpx;
    overflow: hidden;
}

.info_det {
    margin-top: 60rpx;
    display: flex;
    justify-content: space-between;
}

.good_price {
    color: #000;
    font-weight: bold;
}

.good_num {
    color: #999;
}

.priceInfo {
    padding: 15rpx 0;
    border-bottom: 1rpx solid #E6E6E6;
}

.priceInfo .li {
    display: flex;
    justify-content: space-between;
    line-height: 54rpx;
    font-size: 24rpx;
    color: rgba(51, 51, 51, 1);
}

.priceInfo .li .numTxt {
    font-weight: bold;
}

.i_bottom {
    line-height: 68rpx;
    text-align: right;
    font-size: 24rpx;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
}

.i_bottom text {
    font-size: 28rpx;
    color: rgba(200, 142, 100, 1);
    margin-left: 34rpx;
}

.pay_sattus {
    margin-top: 20rpx;
    background: #fff;
    padding: 15rpx 30rpx;
    font-size: 24rpx;
    color: #999;
    line-height: 54rpx;
}

.pay_sattus .li {
    display: flex;
    justify-content: space-between;
}

.pay_sattus .li text:first-child {
    font-weight: bold;
}

.footerBox {
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
}

.gradient {
    height: 31rpx;
    background: linear-gradient(180deg, rgba(238, 238, 238, 0) 0%, rgba(181, 181, 181, 0.96) 100%);
    opacity: 0.057800000000000004;
}

.footer {
    height: 100rpx;
    background: rgba(255, 255, 255, 1);
    display: flex;
    justify-content: center;
    align-items: center;
}

.order_cz {
    margin: 0 10rpx;
    width: auto !important;
    height: 52rpx;
    line-height: 52rpx !important;
    font-size: 24rpx;
    color: #C88E64 !important;
    border-color: #C88E64 !important;
    border-radius: 26rpx;
    padding: 0 20rpx !important;
}

.order_cz.black {
    color: #333 !important;
    border-color: #999 !important;
}

.order_cz:first-child {
    color: #333 !important;
    border-color: #999 !important;
}

.order_cz:last-child {
    color: #C88E64 !important;
    border-color: #C88E64 !important;
}

.tpBox {
    margin-top: 20rpx;
    background: #fff;
    padding: 15rpx 30rpx;
    font-size: 24rpx;
    color: #999;
    line-height: 36rpx;
}

.tp_tlt {
    font-weight: bold;
    padding: 5rpx 0 10rpx 0;
}

/* 弹窗 */
.modalDlg {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 9000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.dlgContent {
    width: 80%;
    height: 720rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 14rpx;
    bottom: 0;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.log_name {
    padding: 30rpx 0;
    border-bottom: 1px solid #F5F6F6;
    font-size: 28rpx;
}

.log_list {
    height: 500rpx;
    font-size: 28rpx;
}

.l_log {
    border-bottom: 1px solid #F5F6F6;
    line-height: 36rpx;
    padding: 15rpx 20rpx;
}

.another {
    height: 70rpx;
    line-height: 70rpx !important;
    width: 100% !important;
    border-radius: 50rpx !important;
    margin: 0;
    margin-top: 30rpx;
}