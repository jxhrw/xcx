/* pages/order_success/order_success.wxss */
page {
    height: 100%;
    background: #FAFAFA url('https://youwatch.oss-cn-beijing.aliyuncs.com/app/wechat/bg_sus_top.png') no-repeat center top -100rpx/100%;
}

.top_box {
    /* margin-top: 30rpx; */
    text-align: center;
}

.page_title {
    font-size: 33rpx;
    /* font-weight:bold; */
    display: inline-block;
    color: rgba(255, 255, 255, 1);
    line-height: 36rpx;
    padding-left: 46rpx;
    background: url('https://youwatch.oss-cn-beijing.aliyuncs.com/app/wechat/icon_right.png') no-repeat left center/36rpx;
}

.order {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
    margin-top: 30rpx;
}

.tips {
    width: 650rpx;
    /* height: 652rpx; */
    background: rgba(255, 255, 255, 1);
    margin: auto;
    margin-top: 60rpx;
}

.tips_img {
    height: 296rpx;
    background: url('https://youwatch.oss-cn-beijing.aliyuncs.com/app/wechat/bg_sus.png') no-repeat center top/100% 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    letter-spacing: 2rpx;
}

.tips_txt {
    padding: 23rpx 40rpx 64rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
}

.lh_30 {
    line-height: 34rpx;
    font-size: 28rpx;
}

.lh_30 text {
    color: #C88E64;
}

.lh_40 {
    margin-top: 50rpx;
    line-height: 40rpx;
}

.bottom {
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 90rpx;
    text-align: center;
}

.bottom button {
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    border: 1px solid rgba(51, 51, 51, 1);
    font-size: 24rpx;
    color: rgba(51, 51, 51, 1);
    margin: 0 10rpx;
}